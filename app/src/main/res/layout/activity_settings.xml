<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ValueNotifications"
        android:id="@+id/LabelNotifications"
        android:text="Notifications"
        android:textSize="8pt"
        android:padding="5dp"
        android:gravity="start|center"
        android:layout_width="0dp"
        android:layout_height="50dp"/>
    <androidx.appcompat.widget.SwitchCompat
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LabelNotifications"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ValueNotifications"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>


    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/SyncData"
        android:id="@+id/ClearData"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Clear Data"
        android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/SyncData"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Synchronize Data"
        android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>